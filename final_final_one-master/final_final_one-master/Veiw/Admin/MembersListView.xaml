<Page x:Class="DataGridNamespace.Admin.MembersListView" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:userModels="clr-namespace:UserModels"
      xmlns:converters="clr-namespace:DataGridNamespace.Veiw.Converters"
      xmlns:local="clr-namespace:DataGridNamespace.Veiw.Converters"

      
      
      Title="Members Management">

    <Page.Resources>
        
        <!-- Converters -->
        <local:ProfilePicVisibilityConverter x:Key="ProfilePicVisibilityConverter"/>
        <local:ProfilePicVisibilityInverseConverter x:Key="ProfilePicVisibilityInverseConverter"/>
        <local:ProfilePictureUrlConverter x:Key="ProfilePictureUrlConverter"/>
        <converters:RoleToColorConverter x:Key="RoleToColorConverter"/>
        <converters:NameToInitialsConverter x:Key="NameToInitialsConverter"/>


        <!-- Search TextBox Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="30,5,10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#008080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                    <Setter Property="Background" Value="#F8FFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#006666"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- Button Style for Actions (Edit/Delete) -->
       <Style x:Key="ActionButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="8"/>
    <Setter Property="Margin" Value="0,0,8,0"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="Button">
                <Border Background="{TemplateBinding Background}"
                        CornerRadius="6"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
    <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
            <Setter Property="Background" Value="#F3F4F6"/>
        </Trigger>
    </Style.Triggers>
</Style>


        <!-- Pagination Button Style -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#008080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#008080"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6F3F3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#008080"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernFilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#008080"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                    <Setter Property="BorderBrush" Value="#004d4d"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004d4d"/>
                    <Setter Property="BorderBrush" Value="#003333"/>
                </Trigger>
            </Style.Triggers>
        </Style>




        <!-- Active Page Button Style -->
        <Style x:Key="ActivePageButtonStyle" TargetType="Button" BasedOn="{StaticResource PaginationButtonStyle}">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Filter ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#008080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Members DataGrid Style -->
        <Style x:Key="MembersDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E6F3F3"/>
                    <Setter Property="Foreground" Value="#008080"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F9F9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="searchIcon" TargetType="Path">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Fill" Value="Black"/>
            <Setter Property="Stretch" Value="Uniform"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMouseOver, ElementName=SearchContainer}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                               From="1" To="1.1" Duration="0:0:0.5" 
                                               AutoReverse="True" RepeatBehavior="Forever"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                               From="1" To="1.1" Duration="0:0:0.5" 
                                               AutoReverse="True" RepeatBehavior="Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Geometry x:Key="SearchIconData">M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z</Geometry>
        <!-- Define Icons for Edit/Delete -->
        <Geometry x:Key="EditIconData">M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z</Geometry>
        <Geometry x:Key="DeleteIconData">M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7H6v12zM19 4h-3.5l-1-1h-5l-1 1H5v2h14V4z</Geometry>
    </Page.Resources>
    

    <!-- Main Layout -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Green Header Section for 'Members Management' -->
        <Border Grid.Row="0" Background="#008080" Padding="12,10" CornerRadius="8,8,0,0">
            <Grid>
                <TextBlock Text="Members Management"
                     Foreground="White" 
                     FontSize="20" 
                     FontWeight="Bold"
                     VerticalAlignment="Center"/>
                <TextBlock x:Name="MembersCounterText"
                       Text="Total: 0 Members" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center"
                       Foreground="White" 
                       FontSize="12"/>
            </Grid>
        </Border>

        <!-- Search and Filter Section -->
        <Border Grid.Row="1" Background="#F0FFFF" CornerRadius="0,0,0,0" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Grid Grid.Column="0">
                    <TextBox x:Name="SearchTextBox" 
                             Style="{StaticResource SearchBoxStyle}"
                             TextChanged="SearchTextBox_TextChanged"/>
                    <TextBlock Text="Search members..." 
                               Margin="30,0,0,0"
                               Foreground="#666666"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"
                               Visibility="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Inverse'}" />
                    <TextBlock Text="🔍" 
                               Margin="10,0,0,0"
                               Foreground="#666666"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                </Grid>

                <!-- Filter ComboBox -->
                <ComboBox Grid.Column="1" 
                          x:Name="FilterComboBox" 
                          Style="{StaticResource FilterComboBoxStyle}"
                          SelectionChanged="FilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="All Members" IsSelected="True"/>
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Etudiant"/>
                    <ComboBoxItem Content="SimpleUser"/>
                </ComboBox>

                <!-- Refresh Button -->
                <Button Grid.Column="2" x:Name="RefreshButton" 
                        Style="{StaticResource ActionButtonStyle}"
                        Content="Refresh" Margin="0,0,6,0"
                        Click="RefreshButton_Click"/>
            </Grid>
        </Border>

        <!-- Members DataGrid -->
        <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="1" Margin="12,6,12,6" CornerRadius="4">
            <DataGrid x:Name="MembersDataGrid"
                      Style="{StaticResource MembersDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                      CellStyle="{StaticResource CellStyle}"
                      SelectionChanged="MembersDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <!-- ID Column -->
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="Auto" 
                                        HeaderStyle="{StaticResource ColumnHeaderStyle}" />

                    <!-- Member Name Column with Avatar -->
                    <DataGridTemplateColumn Header="Member" Width="*" HeaderStyle="{StaticResource ColumnHeaderStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <!-- Circle for Initials with Color based on Role -->
                                    <Border Width="35" Height="35" CornerRadius="25" 
                        Background="{Binding Role, Converter={StaticResource RoleToColorConverter}}">
                                        <TextBlock Text="{Binding Nom, Converter={StaticResource NameToInitialsConverter}}"
                               Foreground="White"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                                    </Border>

                                    <TextBlock Text="{Binding Nom}" Margin="12,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Position Column (Role) -->
                    <DataGridTextColumn Header="Role" 
                                        Binding="{Binding Role}" 
                                        Width="*" 
                                        HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                    <!-- Email Column -->
                    <DataGridTextColumn Header="Email Address" 
                                        Binding="{Binding Email}" 
                                        Width="*" 
                                        HeaderStyle="{StaticResource ColumnHeaderStyle}"/>

                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" 
                                           Width="Auto" 
                                           HeaderStyle="{StaticResource ColumnHeaderStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource ActionButtonStyle}"
                                            Tag="{Binding}"
                                            Click="EditButton_Click">
                                        <Path Data="{StaticResource EditIconData}"
                                              Width="16"
                                              Height="16"
                                              Fill="#6B7280"
                                              Stretch="Uniform"/>
                                    </Button>
                                    <Button Style="{StaticResource ActionButtonStyle}"
                                            Tag="{Binding}"
                                            Click="DeleteButton_Click">
                                        <Path Data="{StaticResource DeleteIconData}"
                                              Width="16"
                                              Height="16"
                                              Fill="#6B7280"
                                              Stretch="Uniform"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Pagination Controls -->
        <Border Grid.Row="3"  
                BorderBrush="#E5E7EB" 
                BorderThickness="0,1,0,0" 
                Padding="0,6,0,12"
                Background="#F9FAFB"
                CornerRadius="0,0,8,8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Pagination Buttons (Previous/Next) -->
                <Button x:Name="FirstPageButton" 
                        Style="{StaticResource PaginationButtonStyle}"
                        Click="FirstPageButton_Click"
                        ToolTip="First Page">
                    <TextBlock Text="«" FontSize="16" VerticalAlignment="Center"/>
                </Button>

                <Button x:Name="PreviousPageButton" 
                        Style="{StaticResource PaginationButtonStyle}"
                        Click="PreviousPageButton_Click"
                        ToolTip="Previous Page">
                    <TextBlock Text="‹" FontSize="16" VerticalAlignment="Center"/>
                </Button>

                <ItemsControl x:Name="PaginationItemsControl" VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <Button x:Name="NextPageButton" 
                        Style="{StaticResource PaginationButtonStyle}"
                        Click="NextPageButton_Click"
                        ToolTip="Next Page">
                    <TextBlock Text="›" FontSize="16" VerticalAlignment="Center"/>
                </Button>

                <Button x:Name="LastPageButton" 
                        Style="{StaticResource PaginationButtonStyle}"
                        Click="LastPageButton_Click"
                        ToolTip="Last Page">
                    <TextBlock Text="»" FontSize="16" VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
