<Page x:Class="DataGridNamespace.MyThesesWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataGridNamespace"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800">

    <Page.Resources>
        <!-- Search TextBox Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="25,4,8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#008080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                    <Setter Property="Background" Value="#F8FFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Edit Button Style -->
        <Style x:Key="EditButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E8E41"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E6B31"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A12B1F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ThesisDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- DataGrid Column Header Style -->
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#006666"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E6F3F3"/>
                    <Setter Property="Foreground" Value="#008080"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F9F9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Filter ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#008080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#008080" Padding="12,10" CornerRadius="8,8,0,0">
            <Grid>
                <TextBlock Text="My Theses" 
                       Foreground="White" 
                       FontSize="20" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
                <TextBlock x:Name="ThesisCounterText"
                       Text="Total: 0 Theses" 
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center"
                       Foreground="White" 
                       FontSize="12"/>
            </Grid>
        </Border>

        <!-- Search and Filter Section -->
        <Border Grid.Row="1" Background="#F0FFFF" CornerRadius="0,0,0,0" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Grid Grid.Column="0">
                    <TextBox x:Name="SearchTextBox" 
                             Style="{StaticResource SearchBoxStyle}"
                             TextChanged="SearchTextBox_TextChanged"/>
                    <TextBlock Text="Search in theses..." 
                               Margin="30,0,0,0"
                               Foreground="#666666"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"
                               Visibility="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Inverse'}" />
                    <TextBlock Text="ðŸ”" 
                               Margin="10,0,0,0"
                               Foreground="#666666"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                </Grid>

                <!-- Type Filter -->
                <ComboBox x:Name="TypeFilterComboBox" 
                          Grid.Column="1"
                          Style="{StaticResource FilterComboBoxStyle}"
                          SelectionChanged="TypeFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="All Types" IsSelected="True"/>
                    <ComboBoxItem Content="Doctorat"/>
                    <ComboBoxItem Content="Master"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Thesis DataGrid -->
        <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="1" Margin="12,6,12,6" CornerRadius="4">
            <DataGrid x:Name="ThesesDataGrid" 
                      Style="{StaticResource ThesisDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                      CellStyle="{StaticResource CellStyle}"
                      SelectionChanged="ThesesDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                      Binding="{Binding Id}" 
                                      Width="60"/>
                    <DataGridTextColumn Header="Title" 
                                      Binding="{Binding Titre}" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Author" 
                                      Binding="{Binding Auteur}" 
                                      Width="150"/>
                    <DataGridTextColumn Header="Specialty" 
                                      Binding="{Binding Speciality}" 
                                      Width="120"/>
                    <DataGridTextColumn Header="Type" 
                                      Binding="{Binding Type}" 
                                      Width="100"/>
                    <DataGridTextColumn Header="Year" 
                                      Binding="{Binding Annee, StringFormat=yyyy}" 
                                      Width="80"/>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Margin" Value="0,4,0,0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F9F9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E6F3F3"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>
    </Grid>
</Page> 