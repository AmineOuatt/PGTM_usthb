<UserControl x:Class="DataGridNamespace.Admin.ThesisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataGridNamespace.Admin"
             xmlns:converters="clr-namespace:DataGridNamespace.Veiw.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Search TextBox Style -->
        <Style x:Key="SearchBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="25,4,8,4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#008080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                    <Setter Property="Background" Value="#F8FFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Circular Action Button Style -->
        <Style x:Key="CircularActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004444"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E8E41"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E6B31"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource CircularActionButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A12B1F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ThesisDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- DataGrid Row Style -->
        <Style x:Key="ThesisRowStyle" TargetType="DataGridRow">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F9F9"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E6F3F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Column Header Style -->
        <Style x:Key="ColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#006666"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#006666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="CellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#E6F3F3"/>
                    <Setter Property="Foreground" Value="#008080"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F1F9F9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Pagination Button Style -->
        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#008080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#008080"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E6F3F3"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#008080"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Active Page Button Style -->
        <Style x:Key="ActivePageButtonStyle" TargetType="Button" BasedOn="{StaticResource PaginationButtonStyle}">
            <Setter Property="Background" Value="#008080"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#008080"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                </Trigger>
                <Trigger Property="IsDropDownOpen" Value="True">
                    <Setter Property="BorderBrush" Value="#005555"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Role to Visibility Converter -->
        <local:RoleToVisibilityConverter x:Key="RoleToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Title and Search Bar -->
        <Grid Grid.Row="0">
            <Border Background="#008080" Padding="12,10" CornerRadius="8,8,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Title -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Thesis Management" FontSize="20" FontWeight="Bold" Foreground="White"/>
                        <TextBlock x:Name="ThesisCounterText" Text="(0 theses)" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="6,3,0,0"/>
                    </StackPanel>
                    
                    <!-- Refresh Button -->
                    <Button Grid.Column="1" x:Name="RefreshButton" 
                            Style="{StaticResource ActionButtonStyle}"
                            Content="Refresh" Margin="0,0,6,0"
                            Click="RefreshButton_Click"/>
                    
                    <!-- Add Thesis Button -->
                    <Button Grid.Column="2" x:Name="AddThesisButton" 
                            Style="{StaticResource AddButtonStyle}"
                            Content="Add Thesis" Margin="0,0,12,0"
                            Click="AddThesisButton_Click"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Search and Filter Section -->
        <Border Grid.Row="1" Background="#F0FFFF" CornerRadius="0,0,0,0" Padding="12,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Grid Grid.Column="0">
                    <TextBox x:Name="SearchTextBox" 
                             Style="{StaticResource SearchBoxStyle}"
                             TextChanged="SearchTextBox_TextChanged"/>
                    <TextBlock Text="Search theses..." 
                               Margin="30,0,0,0"
                               Foreground="#666666"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"
                               Visibility="{Binding Text, ElementName=SearchTextBox, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter='Inverse'}" />
                    <TextBlock Text="🔍" 
                               Margin="10,0,0,0"
                               Foreground="#666666"
                               IsHitTestVisible="False"
                               VerticalAlignment="Center"
                               FontSize="16"/>
                </Grid>

                <!-- Type Filter -->
                <ComboBox x:Name="TypeFilterComboBox" 
                          Grid.Column="1"
                          Style="{StaticResource FilterComboBoxStyle}"
                          SelectionChanged="TypeFilterComboBox_SelectionChanged">
                    <ComboBoxItem Content="All Types" IsSelected="True"/>
                    <ComboBoxItem Content="Doctorat"/>
                    <ComboBoxItem Content="Master"/>
                </ComboBox>

                <!-- Year Filter -->
                <ComboBox x:Name="YearFilterComboBox" 
                          Grid.Column="2"
                          Style="{StaticResource FilterComboBoxStyle}"
                          SelectionChanged="YearFilterComboBox_SelectionChanged"
                          Margin="8,0,0,0">
                    <ComboBoxItem Content="All Years" IsSelected="True"/>
                </ComboBox>
            </Grid>
        </Border>

        <!-- Thesis DataGrid -->
        <Border Grid.Row="2" BorderBrush="#E5E7EB" BorderThickness="1" Margin="12,6,12,6" CornerRadius="4">
            <DataGrid x:Name="ThesisDataGrid" 
                      Style="{StaticResource ThesisDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}"
                      CellStyle="{StaticResource CellStyle}"
                      SelectionChanged="ThesisDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="60"/>
                    <DataGridTextColumn Header="Title" 
                                        Binding="{Binding Titre}" 
                                        Width="*"/>
                    <DataGridTextColumn Header="Author" 
                                        Binding="{Binding Auteur}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="Specialty" 
                                        Binding="{Binding Speciality}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="Type" 
                                        Binding="{Binding Type}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="Year" 
                                        Binding="{Binding Annee, StringFormat=yyyy}" 
                                        Width="80"/>

                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <!-- View Details Button -->
                                    <Button Style="{StaticResource CircularActionButtonStyle}"
                                            Tag="{Binding}"
                                            Click="ViewDetailsButton_Click"
                                            ToolTip="View Details">
                                        <TextBlock Text="ℹ" 
                                                  FontSize="16"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Button>

                                    <!-- View PDF Button -->
                                    <Button Style="{StaticResource CircularActionButtonStyle}"
                                            Tag="{Binding}"
                                            Click="ViewPdfButton_Click"
                                            ToolTip="View PDF">
                                        <TextBlock Text="📄" 
                                                  FontSize="16"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Button>
                                    
                                    <!-- Message Button -->
                                    <Button Style="{StaticResource CircularActionButtonStyle}"
                                            Tag="{Binding}"
                                            Click="SendMessageButton_Click"
                                            ToolTip="Send Message">
                                        <TextBlock Text="✉" 
                                                  FontSize="16"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Button>

                                    <!-- Delete Button -->
                                    <Button Style="{StaticResource DeleteButtonStyle}"
                                            Tag="{Binding}"
                                            Click="DeleteButton_Click"
                                            ToolTip="Delete Thesis">
                                        <TextBlock Text="🗑" 
                                                  FontSize="16"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Margin" Value="0,4,0,0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F9F9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E6F3F3"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>

        <!-- Pagination -->
        <Border Grid.Row="3"  
                BorderBrush="#E5E7EB" 
                BorderThickness="0,1,0,0" 
                Padding="0,6,0,12"
                Background="#F9FAFB"
                CornerRadius="0,0,8,8">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button x:Name="FirstPageButton" 
                        Style="{StaticResource PaginationButtonStyle}"
                        Click="FirstPageButton_Click"
                        ToolTip="First Page">
                    <TextBlock Text="«" 
                               FontSize="16" 
                               VerticalAlignment="Center"/>
                </Button>
                
                <Button x:Name="PreviousPageButton" 
                        Style="{StaticResource PaginationButtonStyle}"
                        Click="PreviousPageButton_Click"
                        ToolTip="Previous Page">
                    <TextBlock Text="‹" 
                               FontSize="16" 
                               VerticalAlignment="Center"/>
                </Button>
                
                <!-- Page Number Buttons (populated dynamically) -->
                <ItemsControl x:Name="PaginationItemsControl" 
                              VerticalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                
                <Button x:Name="NextPageButton" 
                        Style="{StaticResource PaginationButtonStyle}"
                        Click="NextPageButton_Click"
                        ToolTip="Next Page">
                    <TextBlock Text="›" 
                               FontSize="16" 
                               VerticalAlignment="Center"/>
                </Button>
                
                <Button x:Name="LastPageButton" 
                        Style="{StaticResource PaginationButtonStyle}"
                        Click="LastPageButton_Click"
                        ToolTip="Last Page">
                    <TextBlock Text="»" 
                               FontSize="16" 
                               VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>