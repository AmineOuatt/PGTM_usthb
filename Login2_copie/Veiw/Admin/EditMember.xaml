<Window x:Class="DataGridNamespace.Admin.EditMember"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Edit Member" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Edit Member" 
                   Grid.Row="0" 
                   Grid.ColumnSpan="2" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <TextBlock Text="Name:" 
                   Grid.Row="1" 
                   Grid.Column="0" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox x:Name="NameTextBox" 
                 Grid.Row="1" 
                 Grid.Column="1" 
                 Height="30"
                 Margin="0,0,0,10"/>

        <TextBlock Text="Role:" 
                   Grid.Row="2" 
                   Grid.Column="0" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <ComboBox x:Name="RoleComboBox" 
                  Grid.Row="2" 
                  Grid.Column="1" 
                  Height="30"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="Student"/>
            <ComboBoxItem Content="SimpleUser"/>
        </ComboBox>

        <TextBlock Text="Email:" 
                   Grid.Row="3" 
                   Grid.Column="0" 
                   VerticalAlignment="Center"
                   Margin="0,0,10,10"/>
        <TextBox x:Name="EmailTextBox" 
                 Grid.Row="3" 
                 Grid.Column="1" 
                 Height="30"
                 Margin="0,0,0,10"/>

        <TextBlock Text="Password:" 
                   Grid.Row="4" 
                   Grid.Column="0"
                   VerticalAlignment="Center" 
                   Margin="0,0,10,10"/>
        <PasswordBox x:Name="PasswordBox"
                    Grid.Row="4"
                    Grid.Column="1"
                    Height="30"
                    Margin="0,0,0,10"/>

        <TextBlock Text="Confirm:" 
                   Grid.Row="5" 
                   Grid.Column="0"
                   VerticalAlignment="Center" 
                   Margin="0,0,10,10"/>
        <PasswordBox x:Name="ConfirmPasswordBox"
                    Grid.Row="5"
                    Grid.Column="1"
                    Height="30"
                    Margin="0,0,0,10"/>

        <StackPanel Grid.Row="6" 
                    Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Save" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0" 
                    Click="SaveButton_Click"
                    Background="#2196F3"
                    Foreground="White"
                    BorderThickness="0"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Height="30"
                    Click="CancelButton_Click"
                    Background="#E0E0E0"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window> 